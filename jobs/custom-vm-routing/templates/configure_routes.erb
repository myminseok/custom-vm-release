#!/bin/sh
LOGFILE=/var/vcap/sys/log/custom-vm-routing/custom-vm-routing.log
set +e
echo "[configure_routes] reconfiguring network routes..." >> $LOGFILE
## Remove default GW
set_default_gw() {
  ## Removing all default GW
  for defautgw in $(ip route show | grep default | awk '{print $3}')
  do
    echo "[configure_routes] Removing old gateway $defautgw" >> $LOGFILE
    route del default gw "$defautgw"
    if [ $? != 0 ]; then
      echo " ... failed " >> $LOGFILE
    else
      echo " ... succeed " >> $LOGFILE
    fi
  done

  echo "[configure_routes]  Setting new gateway" >> $LOGFILE
  route add default gw <%= p("default_gw") %>
}


## Remove default gateway
